'''
#5.1.2
class Point:

	def __init__(self, coor_x, coor_y):
		self.coor_x = coor_x
		self.coor_y = coor_y

	def change_loc(self):
		while True:
			q1 = input('change x or change y or nothing?')
			if q1 == 'change x':
				log = input('new x ')
				self.coor_x = log
			if q1 == 'change y':
				log = input('new y ')
				self.coor_y = log
			if q1 == 'nothing':
				return 0

	def coordinations(self):
		print(self.coor_x)
		print(self.coor_y)

position = Point(1, 1)
position.change_loc()
position.coordinations()
'''
#5.1.3
import random

class Воин:
    def __init__(self, name, health, damage):
        self.name = name 
        self.health = health 
        self.damage = damage 

    def smash(self, unit):
        unit.health -= self.damage
        if unit.health > 0:
            print(f'"{self.name}" атаковал "{unit.name}". У "{unit.name}" осталось {unit.health} здоровья')
        else:
            print(f'"{self.name}" атаковал "{unit.name}". "{unit.name}" убит')
            unit.health = 0
        return unit.health
 
from random import randint as rnd
 
player1 = Воин('Красный', 100, 20)
player2 = Воин('Синий', 100, 20)
Units = [player1, player2]
 
while True:
    attack_index = rnd(0, 1)
    target_index = (attack_index + 1)%2 
    target_health = Units[attack_index].smash(Units[target_index])
    if target_health == 0:
        print(f'"{Units[attack_index].name}" Победил!')
        break
